<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>User</th>
      <th>Class</th>
      <th>When</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
    <% if post.course.name == current_user.course_one || post.course.name == current_user.course_two || post.course.name == current_user.course_three || post.course.name == current_user.course_four || post.course.name == current_user.course_five %>
      <tr>
        
        <td><%= post.title %></td>
        <td><%= post.content %></td>
        <td><%= post.user.username %></td>
        <td><%= post.course.name %></td>
        <td><%= time_ago_in_words(post.created_at) + " ago" %></td>
        <td><%= link_to 'Show', post %></td>
        <% if post.user == current_user %>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
