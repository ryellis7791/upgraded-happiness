<h1><%= @user.username %></h1>

<%= form_for(@user) do |f| %>
  
  <%= f.fields_for :courses do |ff| %>

  <fieldset>
    <%= ff.label :course %>
    <%= ff.collection_select(:name, current_user.major.courses.all, :name, :name) %><br />
    <%= ff.hidden_field :_destroy %>
    <%= link_to "remove", '#', class: "remove_fields" %>

  </fieldset>
<% end %>

  <div class="actions">
    <%= f.submit %>
  </div>

  <% end %>